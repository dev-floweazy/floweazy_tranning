<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="classifiers_main_tree" model="ir.ui.view">
        <field name="name">flower.classifiers.main.tree</field>
        <field name="model">classifiers.main</field>
        <field name="arch" type="xml">
            <tree>
                <field name="head_category"/>
            </tree>
        </field>
    </record>

    <record id="classifiers_main_form" model="ir.ui.view">
        <field name="name">flower.classifiers.main.form</field>
        <field name="model">classifiers.main</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="head_category"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="classifiers_main_action" model="ir.actions.act_window">
        <field name="name">Classifiers Main</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">classifiers.main</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Head Category!
            </p>
        </field>
    </record>

    <menuitem id="menu_flower_root" name="Flower" sequence="10"/>
    <!--<menuitem id="menu_configurations_main" name="Configurations" parent="menu_flower_root" sequence="20" action="classifiers_main_action"/>-->
    <menuitem id="menu_flower_classifiers_main" name="Head category" parent="menu_configurations" sequence="20" action="classifiers_main_action"/>




</odoo>




