<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="classifiers_tree" model="ir.ui.view">
        <field name="name">flower.classifiers.tree</field>
        <field name="model">classifiers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sub_category"/>
            </tree>
        </field>
    </record>

    <record id="classifiers_form" model="ir.ui.view">
        <field name="name">flower.classifiers.form</field>
        <field name="model">classifiers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="sub_category"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="classifiers_action" model="ir.actions.act_window">
        <field name="name">Classifiers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">classifiers</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first Sub Category!
            </p>
        </field>
    </record>


    <menuitem id="menu_flower_root" name="Flower" sequence="10"/>
    <menuitem id="menu_configurations" name="Configurations" parent="menu_flower_root" sequence="20" action="classifiers_action"/>
    <menuitem id="menu_flower_classifiers" name="sub category" parent="menu_configurations" sequence="20" action="classifiers_action"/>



</odoo>