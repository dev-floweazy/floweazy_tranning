                        <field name="standard" />
                        <field name="gender" />
                    </group>
                    <group>
                        <field name="guardian"/>
                        <field name="old_school"/>
                        <field name="first_name"/>
                        <field name="disability"/>
                    </group>
                    <group>
                        <field name="address"/>
                        <field name="registration_fee"/>
                        <field name="registration_date"/>
                        <!--<field name="bonafide"/>-->
                        <field name="guardian_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

