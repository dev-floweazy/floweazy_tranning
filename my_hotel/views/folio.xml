<!-- views/hotel_folio_views.xml -->
<odoo>
    <record id="view_hotel_folio_tree" model="ir.ui.view">
        <field name="name">hotel.folio.tree</field>
        <field name="model">hotel.folio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="guest_name"/>
                <field name="order_date"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_folio_form" model="ir.ui.view">
        <field name="name">hotel.folio.form</field>
        <field name="model">hotel.folio</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="name"/>
                </header>
                <sheet>
                    <group>
                        <field name="order_date"/>
                        <field name="guest_name"/>
                        <field name="invoice_address"/>
                    </group>
                    <notebook>
                        <page string="Folio">
                            <field name="room_lines">
                                <tree editable="bottom">
                                    <field name="check_in_date"/>
                                    <field name="check_out_date"/>
                                    <field name="duration"/>
                                    <field name="room_id"/>
                                    <field name="room_price"/>
                                    <field name="discount"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <field name="total"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hotel_folio" model="ir.actions.act_window">
        <field name="name">Hotel Folios</field>
        <field name="res_model">hotel.folio</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hotel_root" name="Hotel Management"/>
    <menuitem id="menu_hotel_folio" name="Folios" parent="menu_hotel_root" action="action_hotel_folio"/>
</odoo>
