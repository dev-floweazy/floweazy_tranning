<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="head_categories_tree" model="ir.ui.view">
        <field name="name">filter.head.categories.tree</field>
        <field name="model">filter.head.categories</field>
        <field name="arch" type="xml">
            <tree>
                <field name="head_category"/>

            </tree>
        </field>
    </record>

    <record id="parent_form" model="ir.ui.view">
        <field name="name">filter.head.categories.form</field>
        <field name="model">filter.head.categories</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="head_category" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="categories_action" model ="ir.actions.act_window">
        <field name="name">head.categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">filter.head.categories</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        Create your first Head Categories!
        </p>
        </field>
    </record>

    <menuitem id="filter_root" name="configurations" sequence="10"/>
    <menuitem id="filter_categories_root" name="Head categories" parent="school_root" sequence="10"/>
    <menuitem id="filter_categories" name="Head Categories" parent="filter_categories_root" action="categories_action" sequence="10"/>

</odoo>