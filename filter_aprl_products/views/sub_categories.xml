<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="categories_tree" model="ir.ui.view">
        <field name="name">filter.sub.categories.tree</field>
        <field name="model">filter.sub.categories</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sub_category"/>

            </tree>
        </field>
    </record>

    <record id="parent_form" model="ir.ui.view">
        <field name="name">filter.sub.categories.form</field>
        <field name="model">filter.sub.categories</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sub_category" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sub_categories_action" model ="ir.actions.act_window">
        <field name="name">sub_categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">filter.sub.categories</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        Create your first sub Categories!
        </p>
        </field>
    </record>

    <menuitem id="filter_root" name="configurations" sequence="10"/>
    <menuitem id="filter_sub_categories_root" name="sub categories" parent="filter_root" sequence="10"/>
    <menuitem id="filter_sub_categories" name="sub Categories" parent="filter_sub_categories_root" action="sub_categories_action" sequence="10"/>

</odoo>